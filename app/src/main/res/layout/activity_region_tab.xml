<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/region_frame_layout"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/region_lv_main"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@color/fragBgColor"
        tools:listitem="@layout/item_tab_region_main"
        android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/stroke_region_left"
        android:id="@+id/region_lv_sub"
        android:layout_weight="2"
        android:paddingStart="30dp"
        tools:listitem="@layout/item_tab_region_sub"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>