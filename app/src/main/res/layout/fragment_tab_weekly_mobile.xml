<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_rl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/img_mobile_one" />

            <FrameLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.9"
                android:background="@drawable/bg_round_and_solid">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="16sp"
                android:id="@+id/mobile_one_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="[메가박스]2인권" />


            <TextView
                android:id="@+id/mobile_one_price_tv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="22,000원"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobile_one_sale_tv"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/mobile_one_price_tv"
                android:text="8%"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobile_one_real_price_tv"
                android:layout_above="@id/mobile_one_price_tv"
                android:layout_alignParentEnd="true"
                android:text="24,000원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_rl_left_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:src="@drawable/img_mobile_three" />

            <FrameLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.9"
                android:background="@drawable/bg_round_and_solid">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="16sp"
                android:id="@+id/mobile_two_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="[투썸플레이스]아이스크림 카페 라떼" />


            <TextView
                android:id="@+id/mobile_two_price_tv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="6,000원"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobile_two_sale_tv"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/mobile_two_price_tv"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_rl_left_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:src="@drawable/img_mobile_two" />

            <FrameLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.9"
                android:background="@drawable/bg_round_and_solid">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="16sp"
                android:id="@+id/mobile_three_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="[BBQ]황금올리브치킨+콜라 1.25L" />


            <TextView
                android:id="@+id/mobile_three_price_tv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="19,000원"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobile_three_sale_tv"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/mobile_three_price_tv"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>